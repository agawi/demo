<div class="blog">

  <p id="notice"><%= notice %></p>

  <h1>Blog</h1>

  <div class="posts">
    <% @posts.each do |post| %>
    <div class="post">
      <h2 class="title"><%= post.title %></h2>
      <div class="flex-box">
          <p class="body"><%= post.body %><p>

        <div class="flex-item">
          <%= link_to 'Show post', post %>
          <%= link_to 'Edit post', edit_post_path(post) %>
          <%= link_to 'Delete post', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to '+', new_post_path, class: "add-btn" %>
</div>
