<div class="blog">
  <p id="notice"><%= notice %></p>
  <div class="post">

    <h2 class="title"><%= @post.title %></h2>


  <p class="body">
    <%= @post.body %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>

  <h2>Comments</h2>
    <%= render 'comments/form.html.erb'%>
  <hr>
  <%= render @post.comments%>
  </div>
</div>
