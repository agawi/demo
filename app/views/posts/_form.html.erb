<div class=form>
  <%= form_for @post, html: {multipart:true} do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :image, class:"title" %>
      <%= f.file_field :image , class:"file-field"%>
    </div>

    <div class="field">
      <%= f.label :title, class:"title" %>
      <%= f.text_field :title , class:"title-field"%>
    </div>

    <div class="field">
      <%= f.label :body , class:"title"%>
      <%= f.text_area :body, class:"text-area"%>
    </div>

    <div class="actions">
      <%= f.submit class:"btn"%>
    </div>
  <% end %>
</div>
