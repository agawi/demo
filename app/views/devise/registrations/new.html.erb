<div class="form">
<h2 class="title2">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email , class:"field-title"%><br />
    <%= f.email_field :email, autofocus: true , class:"text-field"%>
  </div>

  <div class="field">
    <%= f.label :password, class:"field-title"%>
    <% if @minimum_password_length %>
    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"text-field" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"field-title" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"text-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
